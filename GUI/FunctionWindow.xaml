<Window x:Class="GUI.FunctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Окно функции" MinHeight="300" Height="300" MinWidth="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="TitleTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
        <Button Tag="0" Grid.Row="1" Content="Книги" Click="Button_Click"></Button>
        <Button Tag="1" Grid.Row="2" Content="Авторы" Click="Button_Click"></Button>
        <Button Tag="2" Grid.Row="3" Content="Места хранения" Click="Button_Click"></Button>
        <Button Tag="3" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="140" Click="Button_Click">Назад</Button>
    </Grid>
</Window>
