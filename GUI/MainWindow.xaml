<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Главное окно" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15">Домашняя библиотека</TextBlock>
        <TextBlock Name="BooksQuantityTextBlock" Grid.Row="1"/>
        <Button Name="ReadButton" Grid.Row="2">Просмотреть данные</Button>
        <Button Name="AddButton" Grid.Row="3">Добавить новые данные</Button>
        <Button Name="EditDeleteButton" Grid.Row="4">Редактировать и удалить данные</Button>
        <Button Name="ExitButton" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="140" Click="ExitButton_Click">Выход</Button>
    </Grid>
</Window>
