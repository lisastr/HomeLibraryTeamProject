<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Главное окно" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15">Домашняя библиотека</TextBlock>
        <TextBlock Name="BooksQuantityTextBlock" Grid.Row="1"/>
        <Button Name="ReadButton" Tag="0" Grid.Row="2" Click="Button_Click">Просмотреть данные</Button>
        <Button Name="AddButton" Tag="1" Grid.Row="3" Click="Button_Click">Добавить новые данные</Button>
        <Button Name="EditDeleteButton" Tag="2" Grid.Row="4" Click="Button_Click">Редактировать и удалить данные</Button>
        <Button Name="ExitButton" Tag="3" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="140" Click="Button_Click">Выход</Button>
    </Grid>
</Window>
