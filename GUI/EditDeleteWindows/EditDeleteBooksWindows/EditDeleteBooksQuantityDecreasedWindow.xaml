<Window x:Class="GUI.EditDeleteWindows.EditDeleteBooksQuantityDecreasedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.EditDeleteWindows"
        mc:Ignorable="d"
        Title="Окно: Удалить лишние места хранения книги" MinHeight="300" Height="300" MinWidth="600" Width="600"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Name="TitleTextBox" HorizontalAlignment="Center" VerticalAlignment="Center">Количество экземпляров книги уменьшилось, удалите N связей с местами хранения книги:</TextBlock>
        <DataGrid Grid.Row="1"/>
        <Button Name="DeleteConnectionToStorageButton" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="280" Height="30" Click="DeleteConnectionToStorageButton_Click">Удалить связь с выбранным местом хранения</Button>
    </Grid>
</Window>
